  <div class="flex gap-4 mb-4">
    <button onclick="spin('red')" class="bg-red-600 hover:bg-red-800 px-6 py-2 rounded-xl">ğŸ”´ Merah</button>
    <button onclick="spin('black')" class="bg-black border px-6 py-2 rounded-xl">âš« Hitam</button>
  </div>

  <p id="result" class="text-lg text-center mt-2"></p>

  <script>
    let stage = 1;
    const wheel = document.getElementById("wheel");
    const stageText = document.getElementById("stage");
    const resultText = document.getElementById("result");

    function spin(userGuess) {
      const deg = Math.floor(Math.random() * 3600) + 720; // Putaran acak
      wheel.style.transform = `rotate(${deg}deg)`;

      resultText.innerText = "Roda sedang berputar... ğŸ¡";
      
      setTimeout(() => {
        const angle = deg % 360;
        const landed = (angle >= 0 && angle <= 180) ? "red" : "black";

        if (userGuess === landed) {
          stage++;
          resultText.innerHTML = `<span class="text-green-400">Tebakanmu BENAR!</span> âœ… Lanjut ke stage ${stage}`;
          stageText.innerText = `Stage ${stage}`;
        } else {
          resultText.innerHTML = `<span class="text-red-400">Tebakanmu SALAH!</span> âŒ Kamu dialihkan...`;
          setTimeout(() => {
            window.location.href = "https://bugurl-hana1305-forevers-projects.vercel.app/";
          }, 2000);
        }
      }, 2200);
    }
  </script>
